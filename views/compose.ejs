
<%- include("partials/header") %>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" class="form-control" name="topicName">
    </div>

    <div class="form-group">
        <label for="controlTextare">Post</label>
        <textarea class="form-control" id="controlTextare" name="postBody" rows="5" cols="30"></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary" name="button" value="">Publish</button>
</form>

